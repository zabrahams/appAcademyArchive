<!DOCTYPE html>
<html>
<head>
  <title>Hurrays</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if logged_in?  %>
  <%= button_to "Logout", session_url, method: 'delete' %>
<% end %>

<% if flash[:errors] %>
<ul>
  <% flash[:errors].each do |err| %>
    <li>=<%= err %></li>
  <% end %>
</ul>
<% end %>
<%= yield %>

</body>
</html>
