<h1>New Post</h1>

<form action="" method="post" id="post_form">

  <label for="post_title">Title</label>
  <input type="text" id="post_title" name="post[title]" value="<%= post.escape('title') %>">
  <br>
  <br>

  <label for="post_body">Post Body</label>
  <textarea name="post[body]" id="post_body"><%= post.escape('body') %></textarea>

  <input type="submit" value="Create Post">
</form>
