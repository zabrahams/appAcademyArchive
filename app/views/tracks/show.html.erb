<h1>Track: <%= @track.title %></h1>

<label>Track: </label>
<%= @track.title %>
<br>

<label>Album: </label>
<%= @album.title %>
<br>

<label>Type: </label>
<%= @track.kind %>
<br>
<br>

<label>Lyrics: </label>
<p><%= ugly_lyrics(@track.lyrics) if @track.lyrics %></p>
<br>


<% if admin? %>
  <a href="<%= edit_track_url(@track) %>">Edit <%= @track.title %></a>
  <br>

  <form action="<%= track_url(@track) %>" method="post">
    <%= authenticity_token %>
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Destroy Track">
  </form>
  <br>
<% end %>

<a href="<%= album_url(@album) %>">Back to <%= @album.title %>'s Index</a>
<br>

<%= render @track.notes %>

<% if admin? %>
<%= render 'notes/form', track: @track %>
<% end %>
